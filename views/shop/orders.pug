extends ../layouts/main-layout.pug
block content
    if orders.length > 0
        each order in orders
            .card.mb-5
                .card-header
                    h5 Order ID: # #{order._id}
                table.table
                    thread
                        tr
                            th(style="width:100px;") Image
                            th Product Name
                            th(style="width:150px;") Price
                            th(style="width:150px;") Quantity
                    tbody
                        each item in order.items
                            tr
                                td
                                    img(src=`/img/${item.product.imageUrl}`, width="80")
                                td #{item.product.name}
                                td #{item.product.price} TL
                                td #{item.quantity}
                    tfoot
                        tr
                            td(colspan="2") #{order.date}
                            td
                            - var total = 0
                            each item in order.items
                                - total += item.product.price * item.quantity
                            td #{total} TL

    else
        h1 No orders found