extends ../layouts/main-layout.pug
block content
    form(action="/admin/add-category" method="post")
        div.form-group.row
            label( for="name").col-sm-2.col-form-label Category Name
            div.col-md-10
                input( type="text"  name="name")#name.form-control

        div.form-group.row
            label( for="description").col-sm-2.col-form-label Description
            div.col-md-10
                textarea( type="text"  name="description")#description.form-control

        div.form-group.row
            div.col-md-10.offset-sm-2
                input(type="submit" value="Save Category").btn.btn-primary